{# templates/welcome/index.html.twig #} {% extends 'base.html.twig' %} {% block
body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">Bienvenue</div>
          {% if app.user != null %}
          <table class="table">
            <tr>
              <th>Votre nom d'utilisateur : {{ app.user.getUsername() }}</th>
            </tr>
            <tr>
              <th>Votre Roles : </th>
                {% for role in app.user.getroles() %}
              <tr>
                <td>{{ role }}</td>
              </tr>
              {% endfor %}
            </tr>
          </table>
          {% endif %}
        </div>
      </div>
      {% if app.user == null %}
      <a href="{{ path('app_login') }}" class="btn btn-info">
        Veuillez se connecter >></a
      >
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
